<idea-plugin>
    <id>cn.renyuzhuo.plugin.easygradle</id>
    <name>Easy Gradle</name>
    <version>1.0.0</version>
    <vendor email="renyuzhuo@foxmail.com" url="http://renyuzhuo.cn">RenYuZhuo</vendor>

    <description><![CDATA[
      Easy Gradle.<br>
      Use gradle is so easy! You can format build.gradle file, update gradle to new version, stop gradle with one click.
    ]]></description>

    <change-notes><![CDATA[
      V1.0.0<br>
      Release The First Version: EasyGradle<br>
      Have Fun!
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="GradleKiller.KillGradle" class="cn.renyuzhuo.easygradle.killer.KillGradleAction" text="Kill Gradle"
                description="Kill Gradle if a current task is running" icon="/icons/killer.png">
            <add-to-group group-id="RunMenu" relative-to-action="Stop" anchor="after"/>
            <add-to-group group-id="ToolbarRunGroup" relative-to-action="Stop" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
    </actions>

</idea-plugin>